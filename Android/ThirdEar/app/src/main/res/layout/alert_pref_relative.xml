<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alert_rel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency"
        android:id="@+id/group_name_text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_all_btn"
        android:layout_below="@+id/group_name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:checked="false"
        android:text="Select all" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_phone_speaker"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:layout_below="@+id/select_all_btn"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_phone_flash_light"
        android:layout_marginTop="25dp"
        android:checked="false"
        android:layout_below="@+id/switch_phone_speaker"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_phone_vibrate"
        android:layout_marginTop="30dp"
        android:checked="false"
        android:layout_centerInParent="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_light"
        android:checked="false"
        android:layout_below="@+id/switch_phone_vibrate"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_watch"
        android:checked="false"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/switch_light"
        android:layout_centerInParent="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_hearing_aid"
        android:checked="false"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/switch_watch"
        android:layout_centerInParent="true" />

</RelativeLayout>