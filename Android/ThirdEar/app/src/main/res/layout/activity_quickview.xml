<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/device_selected"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@null"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/device_grey"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2"
        android:layout_marginStart="40dp"
        android:background="@null"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/device_grey"
        android:layout_marginStart="43dp"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3"
        android:background="@null"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton5"
        android:src="@drawable/device_grey"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="275dp"
        android:id="@+id/imageView3"
        android:src="@drawable/phone"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageButton6"
        android:src="@drawable/lightbulb_selected"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:background="@null"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageButton7"
        android:src="@drawable/smartwatch_grey"
        android:background="@null"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_toStartOf="@+id/textView6" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageButton8"
        android:src="@drawable/hearingaid_selected"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_alignEnd="@+id/imageButton5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Living Room"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor1"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/imageButton3"
        android:textAlignment="center"
        android:layout_toStartOf="@+id/imageButton4"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor2"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/imageButton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor3"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/imageButton5" />
</RelativeLayout>